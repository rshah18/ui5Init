<mvc:View
    controllerName="sap.ui.demo/walkthrough.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Shell>
        <App>
            <pages>
                <Page title="{i18n>homePageTitle}">
                    <content>
                        <Panel 
                            headerText="{i18n>helloPanelTitle}"
                            width="auto"
                        >

                            <content>
                                <Button text="{i18n>showHelloButtonText}" press=".onShowHello" class="sapUiSmallMarginEnd" />
                                <Input value="{/recipient/name}" description="hello {/recipient/name}" valueLiveUpdate="false" width="60%" />
                                <Text text="hello {/recipient/name}" class="sapUiSmallMargin" />
                            </content>
                        </Panel>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>

</mvc:View>